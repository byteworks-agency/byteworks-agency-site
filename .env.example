## Contact intake webhook (optional)
# POINT THIS to your internal service/CRM webhook if you want /api/contact to forward submissions.
# Leave empty to disable forwarding (the endpoint will return 501 until configured).
CONTACT_ENDPOINT=""

## Database (Prisma / Postgres)
# Example: postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public
# For local dev (classic Postgres):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/byteworks?schema=public"

# For Supabase (recommended setup):
# - DATABASE_URL should point to the pooled endpoint (PgBouncer) for the runtime app
# - DIRECT_URL should point to the non-pooled endpoint for prisma migrate/introspect
# Replace HOST, DB, USER, PASS as needed and keep sslmode=require
# DATABASE_URL="postgresql://USER:PASS@aws-xxx.pooler.supabase.com:6543/DB?pgbouncer=true&connection_limit=1&sslmode=require"
# DIRECT_URL="postgresql://USER:PASS@aws-xxx.supabase.co:5432/DB?sslmode=require"
DIRECT_URL=""

## Supabase Auth (server-side gating for /admin and APIs)
SUPABASE_URL="https://xxxx.supabase.co"
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

