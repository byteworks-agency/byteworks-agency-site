/* Redirige seg√∫n preferencia guardada o idioma del navegador */
---
<html lang="en">
  <head>
    <meta http-equiv="refresh" content="0; url=/en/">
    <script>
      try {
        const stored = localStorage.getItem('bw_lang');
        const lang = stored || (navigator.language || 'en');
        const guess = lang.toLowerCase().startsWith('es') ? 'es' : 'en';
        if (!/^\/(en|es)\//.test(location.pathname)) {
          location.replace('/' + guess + '/');
        }
      } catch (e) {
        location.replace('/en/');
      }
    </script>
  </head>
  <body></body>
</html>