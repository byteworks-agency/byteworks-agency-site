---
import Base from "../../layouts/Base.astro";
import Hero from "../../components/Hero.astro";
import { es as t } from "../../i18n/es";
---

<Base lang="es" t={t} title="ByteWorks — Websites that work for you" description={t.c_home_desc}>
  <Hero
    lang="es"
    title={t.c_home_title}
    description={t.c_home_desc}
    primaryHref="#plans"
    primaryText={t.c_home_primary}
    secondaryHref="/es/contact"
    secondaryText={t.c_home_secondary}
  />

  <!-- PLANES -->
  <section id="plans" class="max-w-6xl mx-auto px-4 py-12">
  <h2 class="text-2xl font-semibold font-display">Planes</h2>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Start -->
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/start.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Start — Essential Presence</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$45/mes → $459/año</p>
          </div>
        </div>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$45</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mes</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• One-page responsive</li>
        <li>• Botón WhatsApp + Formulario</li>
        <li>• SEO local básico</li>
        <li>• Dominio, hosting y mantenimiento</li>
        <li>• 1 actualización mensual</li>
        <li>• Soporte por WhatsApp</li>
        <li>• SSL, backups y monitoreo</li>
      </ul>
      <a href="/es/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Elegir este plan</a>
    </article>

    <!-- Pro -->
    <article class="rounded-xl border border-brand/40 bg-white/60 dark:bg-neutral-900/50 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/pro.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Pro — Complete Presence</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$55/mes → $561/año</p>
          </div>
        </div>
        <span class="text-xs px-2 py-1 rounded-md bg-brand/20 text-neutral-900 dark:text-white font-medium">Más elegido</span>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$55</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mes</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Todo del Start</li>
        <li>• Hasta 5 secciones/páginas</li>
        <li>• Diseño alineado a tu marca</li>
        <li>• Formularios avanzados</li>
        <li>• Envío directo a WhatsApp</li>
        <li>• SEO en todas las páginas</li>
        <li>• 2 actualizaciones mensuales</li>
        <li>• Soporte y seguimiento</li>
      </ul>
      <a href="/es/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Elegir este plan</a>
    </article>

    <!-- Elite -->
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/elite.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Elite — Automation & Growth</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$70/mes → $714/año</p>
          </div>
        </div>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$70</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mes</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Todo del Pro</li>
        <li>• Hasta 8 páginas personalizadas</li>
        <li>• Automatizaciones Google</li>
        <li>• Formularios → Sheets + WhatsApp</li>
        <li>• Leads + panel Analytics</li>
        <li>• Optimización mensual</li>
        <li>• Soporte prioritario (24–48h)</li>
        <li>• 4 actualizaciones mensuales</li>
      </ul>
      <a href="/es/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Elegir este plan</a>
    </article>
  </div>

  <!-- E-Commerce + Add-ons -->
  <div class="mt-10 grid gap-6 lg:grid-cols-2">
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6">
      <div class="flex items-center gap-3">
        <img src="/icons/ecommerce.svg" alt="" class="w-6 h-6 dark:invert" />
        <h3 class="text-lg font-semibold">E-Commerce Pro — Online Store Solution</h3>
        
        <div class="text-2xl font-semibold">$95 <span class="text-sm text-neutral-600 dark:text-neutral-300">/mes</span></div>
      </div>
      <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">Ideal para vender en línea con una tienda completa.</p>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Hasta 10 páginas</li><li>• Hasta 100 productos</li><li>• Carrito y checkout manual</li><li>• Flujos internos</li>
        <li>• Pedidos + WhatsApp</li><li>• Cuentas de cliente</li><li>• SEO básico por producto</li><li>• 3 actualizaciones • Soporte prioritario</li>
      </ul>
      <a href="/es/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Elegir este plan</a>
    </article>

    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6">
      <h4 class="font-semibold font-display">Add-ons (opcionales)</h4>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Advanced SEO & Local +$30/mes</li>
        <li>• Blog / News +$25/mes</li>
        <li>• Small Store (≤20 productos) +$35/mes</li>
        <li>• Basic Branding (único) $120</li>
      </ul>
    </article>
  </div>
</section>

  <!-- CTA -->
  <section class="max-w-6xl mx-auto px-4 pb-12" id="cta">
    <div class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 grid md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-xl font-semibold font-display">{t.cta_title}</h3>
        <p class="text-neutral-600 dark:text-neutral-300 text-sm mt-2">{t.pricing_note}</p>
      </div>
      <div class="self-center md:text-right">
        <a href="/es/contact" class="inline-block px-4 py-2 rounded-md bg-brand text-black font-medium">Agendar una llamada</a>
      </div>
    </div>
  </section>

  <script is:inline>
    const toggle = document.getElementById('toggle');
    const prices = () => document.querySelectorAll('.price');
    const periods = () => document.querySelectorAll('.period');
    function apply(yearly) { prices().forEach(p => p.textContent = yearly ? p.dataset.year : p.dataset.month);
                             periods().forEach(el => el.textContent = yearly ? '/año' : '/mes'); }
    toggle?.addEventListener('change', e => apply(e.target.checked));
  </script>
</Base>