---
import Base from "../../layouts/Base.astro";
import Hero from "../../components/Hero.astro";
import Plans from "../../components/Plans.astro";
import Addons from "../../components/Addons.astro";
import FAQ from "../../components/FAQ.astro";

const title = "ByteWorks — Sitios web que trabajan para ti";
const description =
  "Sitios profesionales, precios claros, mantenimiento incluido y soporte real. ByteWorks crea sitios web que funcionan para ti, no en tu contra.";
---

<Base lang="es" title={title} description={description}>
  <!-- Hero principal -->
  <Hero
    lang="es"
    title="Sitios web que trabajan para ti, no en tu contra"
    description="Sitios profesionales, precios claros, mantenimiento incluido y soporte real."
    primaryHref="/es/#plans"
    primaryText="Ver planes"
    secondaryHref="/es/contact"
    secondaryText="Contáctanos"
    img="/logo-light.png"
  />

  <!-- Planes -->
  <Plans
    lang="es"
    title="Planes claros, resultados reales"
    description="Elige el plan que mejor se adapte a tu negocio. Todos incluyen dominio, hosting y mantenimiento mensual."
  />

  <!-- Add-ons -->
  <Addons
    lang="es"
    title="Add-ons opcionales"
    description="Mejora tu sitio con funciones adicionales que puedes activar cuando lo necesites."
  />

  <!-- FAQ -->
  <FAQ
    lang="es"
    title="Preguntas frecuentes"
    description="Resolvemos las dudas más comunes sobre los planes y el funcionamiento del servicio."
  />

  <!-- CTA final -->
  <section class="section text-center py-16">
    <h2 class="font-display text-2xl sm:text-3xl font-semibold mb-4">
      ¿Listo para dar el siguiente paso?
    </h2>
    <p class="text-neutral-600 dark:text-neutral-300 mb-8">
      Nos encargamos de la parte técnica, tú te concentras en tu negocio.
    </p>
    <a
      href="/es/contact"
      class="inline-block px-6 py-3 bg-brand text-black rounded-md font-medium hover:opacity-90 transition"
    >
      Contáctanos hoy
    </a>
  </section>
</Base>
