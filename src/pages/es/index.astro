---
import Base from "../../layouts/Base.astro";
import { es as t } from "../../i18n/es";
---

<Base
  lang="es"
  t={t}
  title="ByteWorks — Websites that work for you"
  description={t.c_home_desc}
>
  <section
    class="max-w-6xl mx-auto px-4 pt-16 pb-10 grid lg:grid-cols-2 gap-8 items-center"
  >
    <div>
      <h1 class="text-4xl md:text-5xl font-semibold leading-tight font-display">
        {t.c_home_title}
      </h1>
    </div>
    <div
      class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6"
    >
      <div class="text-sm text-neutral-300/90">
        Incluye: dominio, hosting, SSL, copias de seguridad, monitoreo básico y
        soporte humano por WhatsApp.
      </div>
      <div class="mt-4 text-sm text-neutral-300/90">
        Precios en USD. Conversión local disponible. Pagos manuales o
        transferencia.
      </div>
    </div>
  </section>

  <section id="plans" class="max-w-6xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-semibold font-display">{t.plans_title}</h2>
    <p class="mt-3 text-neutral-300/90 text-sm">
      Tarjetas de planes en el siguiente commit.
    </p>
  </section>
</Base>
