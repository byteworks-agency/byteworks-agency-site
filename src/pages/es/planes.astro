---
import Base from '../../layouts/Base.astro';
import AddOns from '../../components/AddOns.astro';

const title = 'Planes — ByteWorks';
const description =
  'Planes claros con mantenimiento incluido. Elige el plan que se ajuste a tu etapa y sube cuando quieras. Hosting, SSL, copias y actualizaciones mensuales incluidas.';

const plans = [
  {
    name: 'Start',
    price: '$45/mes',
    yearly: '$459/año (ahorra 15%)',
    bestFor: 'Emprendedores, marcas personales y presencia simple',
    features: [
      'Sitio de una sola página (responsive)',
      'Formulario de contacto (email o Google Sheets)',
      'SEO básico (título, meta, OG, sitemap)',
      'Dominio, hosting y mantenimiento incluidos',
      '1 actualización mensual (≤30 min)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'Pro',
    price: '$55/mes',
    yearly: '$561/año (ahorra 15%)',
    bestFor: 'Negocios de servicios con 3–4 páginas',
    features: [
      'Hasta 4 páginas (Inicio, Sobre, Servicios, Contacto)',
      'Contacto + automatizaciones con Google Sheets',
      'Optimización técnica y rendimiento ligeros',
      'Dominio, hosting y mantenimiento incluidos',
      '2 actualizaciones mensuales (≤45 min c/u)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'Elite',
    price: '$70/mes',
    yearly: '$714/año (ahorra 15%)',
    bestFor: 'Marcas en crecimiento con más secciones y UX',
    features: [
      'Hasta 7 páginas con secciones personalizadas',
      'SEO mejorado (estructura, velocidad, indexación)',
      'Flujos de captación + integraciones con Google',
      'Dominio, hosting y mantenimiento incluidos',
      '3 actualizaciones mensuales (≤60 min c/u)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'E-Commerce Pro',
    price: '$95/mes',
    yearly: '$969/año (ahorra 15%)',
    bestFor: 'Catálogo + pedidos manuales (sin pasarela de pago)',
    features: [
      'Catálogo de productos (hasta 20 ítems)',
      'Carrito local + flujo de checkout manual',
      'Registro de pedidos por Email / Google Sheets',
      'Tracking interno por código',
      '4 actualizaciones mensuales (productos o textos)',
      'SSL, copias, dominio y hosting incluidos',
    ],
  },
];
---

<Base title={title} description={description} image="/og-image.png" lang="es">
  <section class="px-6 md:px-10 lg:px-16 max-w-6xl mx-auto py-14 md:py-20">
    <header class="text-center space-y-3">
      <h1 class="text-3xl md:text-5xl font-semibold">Planes</h1>
      <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Websites que trabajan a tu favor. Mantenimiento incluido. Puedes subir de plan cuando quieras.
      </p>
      <p class="text-xs text-gray-500">Precios en USD. Para otros métodos de pago/monedas, contáctanos.</p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mt-10">
      {plans.map((p) => (
        <article class="flex flex-col border border-gray-200 dark:border-gray-800 rounded-lg p-5">
          <h2 class="text-lg font-semibold">{p.name}</h2>
          <p class="mt-1 text-2xl">{p.price}</p>
          <p class="text-xs text-gray-500">{p.yearly}</p>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{p.bestFor}</p>
          <ul class="mt-4 space-y-2 text-sm text-gray-700 dark:text-gray-200">
            {p.features.map((f) => <li>• {f}</li>)}
          </ul>
          <a href="/es/contacto" class="mt-5 inline-flex items-center justify-center px-4 py-2 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition">
            Solicitar Cotización
          </a>
        </article>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a href="/es/contacto" class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition">
        ¿Dudas? Solicita tu cotización
      </a>
    </div>

    <AddOns lang="es" />
  </section>
</Base>
