---
import Base from '../../layouts/Base.astro';
import AddOns from '../../components/AddOns.astro';

const title = 'Planes — ByteWorks';
const description =
  'Planes transparentes con mantenimiento incluido. Elige el plan que se ajuste a tu etapa; puedes subir cuando lo necesites. Hosting, SSL, copias y actualizaciones mensuales incluidas.';

const plans = [
  {
    name: 'Start',
    price: '$45/mes',
    yearly: '$459/año (ahorra 15%)',
    bestFor: 'Emprendedores, marcas personales y presencia simple',
    features: [
      'Sitio de una sola página (responsive)',
      'Integración de formulario de contacto (email o dashboard interno)',
      'SEO básico (títulos, meta, OG, sitemap)',
      'Dominio, hosting y mantenimiento incluidos',
      '1 actualización mensual (~30 min)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'Pro',
    price: '$55/mes',
    yearly: '$561/año (ahorra 15%)',
    bestFor: 'Negocios de servicios que necesitan 3–4 páginas',
    features: [
      'Hasta 4 páginas (Inicio, Nosotros, Servicios, Contacto)',
      'Automatizaciones de contacto + dashboard interno',
      'Optimización técnica ligera y rendimiento',
      'Dominio, hosting y mantenimiento incluidos',
      '2 actualizaciones mensuales (~45 min c/u)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'Elite',
    price: '$70/mes',
    yearly: '$714/año (ahorra 15%)',
    bestFor: 'Marcas en crecimiento que necesitan más secciones y mejor UX',
    features: [
      'Hasta 7 páginas con secciones personalizadas',
      'SEO mejorado (estructura, velocidad, indexación)',
      'Flujos de captación + integraciones con dashboard interno',
      'Dominio, hosting y mantenimiento incluidos',
      '3 actualizaciones mensuales (~60 min c/u)',
      'SSL y copias de seguridad',
    ],
  },
  {
    name: 'E-Commerce Pro',
    price: '$95/mes',
    yearly: '$969/año (ahorra 15%)',
    bestFor: 'Catálogo + pedidos manuales (sin pasarela de pago)',
    features: [
      'Catálogo de productos (hasta 20 artículos)',
      'Carrito local + flujo de checkout manual',
      'Registro de pedidos por el dashboard interno',
      'Seguimiento interno por código',
      'Actualización de productos asistida por ByteWorks o autogestión simple',
      '4 actualizaciones mensuales (productos o textos)',
      'SSL, copias, dominio y hosting incluidos',
    ],
  },
];
---

<Base title={title} description={description} image="/og-image.png" lang="es">
  <section class="px-4 max-w-[960px] mx-auto py-16 md:py-24">
    <header class="text-center space-y-3">
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-text-primary font-heading">Planes</h1>
      <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Precios claros con mantenimiento incluido. Estructura bilingüe por defecto.
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-8 mt-10">
      {plans.map((p) => (
        <article class={`relative h-full rounded-xl p-6 flex flex-col bg-white dark:bg-background-dark/50 ${p.name === 'Pro' ? 'border-2 border-primary' : 'border border-gray-200 dark:border-gray-700'}`}>
          {p.name === 'Pro' && (
            <p class="absolute top-0 -translate-y-1/2 left-1/2 -translate-x-1/2 text-white text-xs font-medium tracking-[0.015em] rounded-full bg-secondary px-3 py-1 text-center">Más Popular</p>
          )}
          <h2 class={`text-2xl md:text-3xl font-extrabold tracking-[-0.025em] font-heading ${p.name === 'Pro' ? 'text-primary' : 'text-gray-900 dark:text-text-primary'}`}>
            {p.name}
          </h2>
          <p class="mt-1 text-lg md:text-xl font-semibold text-gray-900 dark:text-text-primary">{p.price}</p>
          <p class="text-xs text-gray-500 dark:text-gray-400">{p.yearly}</p>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{p.bestFor}</p>
          <ul class="mt-3 space-y-2 text-sm text-gray-600 dark:text-gray-300">
            {p.features.map((f) => (
              <li class="flex gap-3 items-center"><span class="material-symbols-outlined text-primary text-base">check</span>{f}</li>
            ))}
          </ul>
          <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700 grid grid-cols-1 sm:grid-cols-2 gap-2">
            <a href="/es/contacto" class="w-full inline-flex items-center justify-center h-10 px-4 rounded-lg bg-primary text-white font-bold hover:bg-primary/90 transition-colors">Solicitar cotización</a>
            <a href="/es/faq" class="w-full inline-flex items-center justify-center h-10 px-4 rounded-lg bg-transparent text-gray-900 dark:text-white border border-primary hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors">Preguntas</a>
          </div>
        </article>
      ))}
    </div>

    <AddOns lang="es" id="addons" />
  </section>
</Base>

