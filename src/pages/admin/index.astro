---
import AdminBase from '../../layouts/AdminBase.astro';
const title = 'Dashboard';
---

<AdminBase title={title} description="Admin Dashboard" image="/og-image.png" lang="en">
  <section class="max-w-[1200px] mx-auto">
    <h1 class="text-2xl font-bold mb-4">Dashboard</h1>
    <div class="grid sm:grid-cols-3 gap-4">
      <a href="/admin/enquiries" class="block border rounded p-4 bg-white dark:bg-background-dark hover:bg-slate-50 dark:hover:bg-background-dark/70">
        <h2 class="font-semibold">Quote Requests</h2>
        <p class="text-sm text-gray-600">Create a quote from an enquiry ID.</p>
      </a>
      <a href="/admin/quotes" class="block border rounded p-4 bg-white dark:bg-background-dark hover:bg-slate-50 dark:hover:bg-background-dark/70">
        <h2 class="font-semibold">Quotes</h2>
        <p class="text-sm text-gray-600">Browse and manage quotes.</p>
      </a>
      <a href="/admin/billing/invoices" class="block border rounded p-4 bg-white dark:bg-background-dark hover:bg-slate-50 dark:hover:bg-background-dark/70">
        <h2 class="font-semibold">Invoices</h2>
        <p class="text-sm text-gray-600">View invoices and payments.</p>
      </a>
    </div>
  </section>
</AdminBase>



