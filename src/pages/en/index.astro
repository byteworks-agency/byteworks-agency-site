---
import Base from '../../layouts/Base.astro';

const title = 'ByteWorks — Websites that work for you';
const description =
  'Modern, bilingual websites. Transparent pricing, maintenance included, and real support. You focus on your business — we handle the digital side.';

const plans = [
  {
    name: 'Start',
    price: '$45/mo',
    yearly: '$459/yr (save 15%)',
    features: [
      'One-page modern website (mobile-ready)',
      'Contact form integration',
      'Basic local SEO',
      'Domain, hosting & maintenance included',
      '1 monthly update (text/image/color)',
      'SSL, backups',
    ],
  },
  {
    name: 'Pro',
    price: '$55/mo',
    yearly: '$561/yr (save 15%)',
    features: [
      'Up to 4 pages (Home, About, Services, Contact)',
      'Contact + Google Sheets automations',
      'Local SEO + fast performance',
      'Domain, hosting & maintenance included',
      '2 monthly updates',
      'SSL, backups',
    ],
  },
  {
    name: 'Elite',
    price: '$70/mo',
    yearly: '$714/yr (save 15%)',
    features: [
      'Up to 7 pages with custom sections',
      'Enhanced SEO (structure, speed, indexation)',
      'Lead capture flows + Google integrations',
      'Domain, hosting & maintenance included',
      '3 monthly updates',
      'SSL, backups',
    ],
  },
  {
    name: 'E-Commerce Pro',
    price: '$95/mo',
    yearly: '$969/yr (save 15%)',
    features: [
      'Product catalog + basic checkout workflow',
      'Order inbox via Email + Google Sheet sync',
      'SEO for products/categories',
      'Domain, hosting & maintenance included',
      '4 monthly updates',
      'SSL, backups',
    ],
  },
];

const addons = [
  { name: 'Advanced SEO package', note: 'site architecture, schema, link-prep' },
  { name: 'Branding kit', note: 'logo, color, typography, social avatars' },
  { name: 'Extra monthly updates', note: 'beyond plan limits' },
  { name: 'Landing pages for campaigns', note: 'A/B-ready sections' },
];
---

<Base title={title} description={description} image="/og-image.png" lang="en">
  <section class="px-6 md:px-10 lg:px-16 max-w-6xl mx-auto py-16 md:py-24">
    <!-- HERO -->
    <div class="text-center space-y-6">
      <h1 class="text-3xl md:text-5xl font-semibold leading-tight">
        Websites that work for you — not against you.
      </h1>
      <p class="text-base md:text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Professional presence without the headache: transparent plans, maintenance included, real support.
        You focus on your business — we handle the digital side.
      </p>
      <div class="flex items-center justify-center gap-3">
        <a
          href="/en/contact"
          class="inline-flex items-center justify-center px-5 py-3 rounded-md border border-transparent bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
        >
          Request a Quote
        </a>
        <a href="/en/plans" class="inline-flex items-center justify-center px-5 py-3 rounded-md border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition">
          See Plans
        </a>
      </div>
    </div>

    <!-- BENEFITS -->
    <div class="grid md:grid-cols-3 gap-6 mt-16">
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Bilingual by default</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">English & Spanish content structure ready with SEO-friendly routes.</p>
      </div>
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Transparent pricing</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Clear monthly/yearly options, maintenance included, no surprises.</p>
      </div>
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Fast & secure</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Performance-focused builds, SSL, and backups included.</p>
      </div>
    </div>

    <!-- PLANS -->
    <div class="mt-20">
      <h2 class="text-2xl md:text-3xl font-semibold text-center mb-8">Plans</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {plans.map((p) => (
          <div class="flex flex-col border border-gray-200 dark:border-gray-800 rounded-lg p-5">
            <h3 class="text-lg font-semibold">{p.name}</h3>
            <p class="mt-1 text-xl">{p.price}</p>
            <p class="text-xs text-gray-500">{p.yearly}</p>
            <ul class="mt-4 space-y-2 text-sm text-gray-700 dark:text-gray-200">
              {p.features.map((f) => <li>• {f}</li>)}
            </ul>
            <a href="/en/contact" class="mt-5 inline-flex items-center justify-center px-4 py-2 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition">Request a Quote</a>
          </div>
        ))}
      </div>
      <p class="text-center text-xs text-gray-500 mt-3">Prices in USD. For other payment methods/currencies, contact us.</p>
    </div>

    <!-- ADD-ONS SNAPSHOT -->
    <div class="mt-20">
      <h2 class="text-2xl md:text-3xl font-semibold text-center mb-8">Popular add-ons</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {addons.map((a) => (
          <div class="border border-gray-200 dark:border-gray-800 rounded-lg p-5">
            <h3 class="font-semibold">{a.name}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{a.note}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Base>
