---
import Base from "../../layouts/Base.astro";
import Hero from "../../components/Hero.astro";
import Plans from "../../components/Plans.astro";
import AddOns from "../../components/AddOns.astro"; // O mayúscula
import FAQ from "../../components/FAQ.astro";

const title = "ByteWorks — Websites that work for you";
const description =
  "Professional websites, clear pricing, maintenance included, and real support. ByteWorks builds sites that work for you — not against you.";
---

<Base lang="en" title={title} description={description}>
  <!-- Hero -->
  <Hero
    lang="en"
    title="Websites that work for you — not against you"
    description="Professional presence without the headache. Clear pricing, maintenance included, real support."
    primaryHref="/en/#plans"
    primaryText="See plans"
    secondaryHref="/en/contact"
    secondaryText="Contact"
    img="/logo-light.png"
  />

  <!-- Plans -->
  <Plans
    lang="en"
    title="Clear plans, real results"
    description="Pick the plan that fits your stage. All include domain, hosting, and monthly maintenance."
  />

  <!-- Add-ons -->
  <AddOns
    lang="en"
    title="Optional add-ons"
    description="Enhance your site with extra features you can activate whenever you need them."
  />

  <!-- FAQ -->
  <FAQ
    lang="en"
    title="Frequently Asked Questions"
    description="We answer the most common questions about plans, support, and our process."
  />

  <!-- Final CTA -->
  <section class="section text-center py-16">
    <h2 class="font-display text-2xl sm:text-3xl font-semibold mb-4">
      Ready to ship your site?
    </h2>
    <p class="text-neutral-600 dark:text-neutral-300 mb-8">
      We handle the tech side — you focus on your business.
    </p>
    <a
      href="/en/contact"
      class="inline-block px-6 py-3 bg-brand text-black rounded-md font-medium hover:opacity-90 transition"
    >
      Let’s talk
    </a>
  </section>
</Base>
