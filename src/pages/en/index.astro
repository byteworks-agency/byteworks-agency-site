---
import Base from "../../layouts/Base.astro";
import { en as t } from "../../i18n/en";
---

<Base
  lang="en"
  t={t}
  title="ByteWorks â€” Websites that work for you"
  description={t.c_home_desc}
>
  <section
    class="max-w-6xl mx-auto px-4 pt-16 pb-10 grid lg:grid-cols-2 gap-8 items-center"
  >
    <div>
      <h1 class="text-4xl md:text-5xl font-semibold leading-tight font-display">
        {t.c_home_title}
      </h1>
      <p class="mt-4 text-neutral-600 dark:text-neutral-300 max-w-prose">
        {t.c_home_desc}
      </p>
      <div class="mt-6 flex gap-3">
        <a
          href="#plans"
          class="px-4 py-2 rounded-md bg-brand text-black font-medium"
          >{t.c_home_primary}</a
        >
        <a
          href="/en/contact"
          class="px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60"
          >{t.c_home_secondary}</a
        >
      </div>
    </div>
    <div
      class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6"
    >
      <div class="text-sm text-neutral-600 dark:text-neutral-300">
        Includes: domain, hosting, SSL, backups, basic monitoring, and human
        support via WhatsApp.
      </div>
      <div class="mt-4 text-sm text-neutral-600 dark:text-neutral-300">
        USD pricing. Local conversion available. Manual or bank transfer
        payments.
      </div>
    </div>
  </section>

  <section id="plans" class="max-w-6xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-semibold font-display">{t.plans_title}</h2>
    <p class="mt-3 text-neutral-600 dark:text-neutral-300 text-sm">
      Plan cards coming next.
    </p>
  </section>
</Base>
