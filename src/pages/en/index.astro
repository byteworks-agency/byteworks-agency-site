---
import Base from '../../layouts/Base.astro';
import { HOME_FAQS, HOME_PLAN_ICONS, HOME_PLANS } from '../../content/home';

const title = 'ByteWorks — Websites that work for you';
const description =
  'Modern, bilingual websites. Transparent pricing, maintenance included, and real support. You focus on your business — we handle the digital side.';

const homePlans = HOME_PLANS.en;
const planIcons = HOME_PLAN_ICONS;
const faqs = HOME_FAQS.en;

---

<Base title={title} description={description} image="/og-image.svg" lang="en">
  <section class="px-6 md:px-10 lg:px-16 max-w-6xl mx-auto py-16 md:py-24">
    <!-- HERO -->
    <div class="text-center space-y-6">
      <h1 class="text-3xl md:text-5xl font-semibold leading-tight">
        Websites that work for you — not against you.
      </h1>
      <p class="text-base md:text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Professional presence without the headache: transparent plans, maintenance included, real support.
        You focus on your business — we handle the digital side.
      </p>
      <div class="flex items-center justify-center gap-3">
        <a
          href="/en/contact"
          class="inline-flex items-center justify-center px-5 py-3 rounded-md border border-transparent bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
        >
          Request a Quote
        </a>
        <a href="/en/plans" class="inline-flex items-center justify-center px-5 py-3 rounded-md border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition">
          See Plans
        </a>
      </div>
    </div>

    <!-- BENEFITS -->
    <div class="grid md:grid-cols-3 gap-6 mt-16">
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Bilingual by default</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">English & Spanish content structure ready with SEO-friendly routes.</p>
      </div>
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Transparent pricing</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Clear monthly/yearly options, maintenance included, no surprises.</p>
      </div>
      <div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800">
        <h3 class="font-semibold mb-2">Fast & secure</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Performance-focused builds, SSL, and backups included.</p>
      </div>
    </div>

    <!-- PLANS -->
    <div class="mt-20">
      <h2 class="text-2xl md:text-3xl font-semibold text-center mb-8">Plans</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {homePlans.map((p) => (
          <div class="flex h-full flex-col border border-gray-200 dark:border-gray-800 rounded-lg p-5">
            <h3 class="text-lg font-semibold flex items-center gap-3">
              <img src={planIcons[p.name] || '/icons/plans/start.svg'} alt="" width="32" height="32" class="opacity-95 dark:invert shrink-0" />
              {p.name}
            </h3>
            <p class="mt-1 text-xl">{p.price}</p>
            <p class="text-xs text-gray-500">{p.yearly}</p>
            <ul class="mt-4 space-y-2 text-sm text-gray-700 dark:text-gray-200">
              {p.features.map((f) => <li>- {f}</li>)}
            </ul>
            <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-800 grid grid-cols-1 sm:grid-cols-2 gap-2">
              <a href="/en/plans" class="w-full inline-flex items-center justify-center px-4 py-2 rounded-md border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition">See Plans</a>
              <a href="/en/contact" class="w-full inline-flex items-center justify-center px-4 py-2 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition">Request a Quote</a>
            </div>
          </div>
        ))}
      </div>
      <p class="text-center text-xs text-gray-500 mt-3">Prices in USD. For other payment methods/currencies, contact us.</p>
    </div>

    <!-- PROJECTS (empty state for now) -->
    <div class="mt-20">
      <h2 class="text-2xl md:text-3xl font-semibold text-center mb-8">Projects</h2>
      <div class="border border-dashed border-gray-300 dark:border-gray-700 rounded-lg p-8 text-center max-w-3xl mx-auto">
        <p class="text-gray-600 dark:text-gray-300">
          Case studies and client projects will appear here soon.
        </p>
        <a href="/en/contact" class="mt-4 inline-flex items-center justify-center px-5 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition">
          Request a Quote
        </a>
      </div>
    </div>

  </section>
</Base>

