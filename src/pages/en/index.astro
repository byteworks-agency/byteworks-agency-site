---
import Base from "../../layouts/Base.astro";
import Hero from "../../components/Hero.astro";
import { en as t } from "../../i18n/en";
---

<Base lang="en" t={t} title="ByteWorks — Websites that work for you" description={t.c_home_desc}>
  <Hero
    lang="en"
    title={t.c_home_title}
    description={t.c_home_desc}
    primaryHref="#plans"
    primaryText={t.c_home_primary}
    secondaryHref="/en/contact"
    secondaryText={t.c_home_secondary}
  />

  <!-- PLANS -->
  <section id="plans" class="max-w-6xl mx-auto px-4 py-12">
  <h2 class="text-2xl font-semibold font-display">Plans</h2>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Start -->
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/start.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Start — Essential Presence</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$45/mo → $459/yr</p>
          </div>
        </div>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$45</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mo</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• One-page responsive</li>
        <li>• WhatsApp button + Contact form</li>
        <li>• Local SEO basics</li>
        <li>• Domain, hosting, maintenance included</li>
        <li>• 1 monthly update</li>
        <li>• WhatsApp support</li>
        <li>• SSL, backups, basic monitoring</li>
      </ul>
      <a href="/en/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Choose this plan</a>
    </article>

    <!-- Pro -->
    <article class="rounded-xl border border-brand/40 bg-white/60 dark:bg-neutral-900/50 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/pro.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Pro — Complete Presence</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$55/mo → $561/yr</p>
          </div>
        </div>
        <span class="text-xs px-2 py-1 rounded-md bg-brand/20 text-neutral-900 dark:text-white font-medium">Most chosen</span>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$55</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mo</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Everything in Start</li>
        <li>• Up to 5 sections/pages</li>
        <li>• Brand-aligned design</li>
        <li>• Advanced forms (quotes/reservations)</li>
        <li>• Direct WhatsApp submissions</li>
        <li>• SEO on all pages</li>
        <li>• 2 monthly updates</li>
        <li>• Ongoing WhatsApp support</li>
      </ul>
      <a href="/en/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Choose this plan</a>
    </article>

    <!-- Elite -->
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 hover:shadow-sm transition">
      <header class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/elite.svg" alt="" class="w-6 h-6 dark:invert" />
          <div>
            <h3 class="text-lg font-semibold">Elite — Automation & Growth</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-0.5">$70/mo → $714/yr</p>
          </div>
        </div>
      </header>
      <div class="flex items-baseline gap-2 mt-2">
        <span class="text-3xl font-semibold">$70</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-300">/mo</span>
      </div>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Everything in Pro</li>
        <li>• Up to 8 custom pages</li>
        <li>• Google automation (Sheets, Forms, Drive, Analytics)</li>
        <li>• Forms → Sheets + WhatsApp alerts</li>
        <li>• Auto lead logging + Analytics panel</li>
        <li>• Monthly optimization (speed, security, SEO)</li>
        <li>• Priority support (24–48h)</li>
        <li>• 4 monthly updates</li>
      </ul>
      <a href="/en/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Choose this plan</a>
    </article>
  </div>

  <!-- E-Commerce + Add-ons -->
  <div class="mt-10 grid gap-6 lg:grid-cols-2">
    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6">
      <div class="flex items-center gap-3">
        <img src="/icons/ecommerce.svg" alt="" class="w-6 h-6 dark:invert" />
        <h3 class="text-lg font-semibold">E-Commerce Pro — Online Store Solution</h3>
        <div class="text-2xl font-semibold">$95 <span class="text-sm text-neutral-600 dark:text-neutral-300">/mo</span></div>
      </div>
      <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">For businesses ready to sell online with a secure, easy-to-manage store.</p>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Up to 10 pages</li><li>• Up to 100 products</li><li>• Cart & manual checkout</li><li>• Internal payment flows</li>
        <li>• Orders panel + WhatsApp confirmations</li><li>• Customer accounts</li><li>• Basic SEO per product</li><li>• 3 updates • Priority support</li>
      </ul>
      <a href="/en/contact" class="mt-4 inline-block px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">Choose this plan</a>
    </article>

    <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6">
      <h4 class="font-semibold font-display">Add-ons (optional)</h4>
      <ul class="mt-3 space-y-1 text-sm">
        <li>• Advanced SEO & Local +$30/mo</li>
        <li>• Blog / News +$25/mo</li>
        <li>• Small Store (≤20 products) +$35/mo</li>
        <li>• Basic Branding (one-time) $120</li>
      </ul>
    </article>
  </div>
</section>
  <!-- CTA FOOTER -->
  <section class="max-w-6xl mx-auto px-4 pb-12" id="cta">
    <div class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/50 dark:bg-neutral-900/40 p-6 grid md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-xl font-semibold font-display">{t.cta_title}</h3>
        <p class="text-neutral-600 dark:text-neutral-300 text-sm mt-2">{t.pricing_note}</p>
      </div>
      <div class="self-center md:text-right">
        <a href="/en/contact" class="inline-block px-4 py-2 rounded-md bg-brand text-black font-medium">Schedule a call</a>
      </div>
    </div>
  </section>

  <script is:inline>
    const toggle = document.getElementById('toggle');
    const prices = () => document.querySelectorAll('.price');
    const periods = () => document.querySelectorAll('.period');
    function apply(yearly) { prices().forEach(p => p.textContent = yearly ? p.dataset.year : p.dataset.month);
                             periods().forEach(el => el.textContent = yearly ? '/yr' : '/mo'); }
    toggle?.addEventListener('change', e => apply(e.target.checked));
  </script>
</Base>