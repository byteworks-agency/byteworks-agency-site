---
import Base from '../../layouts/Base.astro';

const title = 'Contact — ByteWorks';
const description =
  'Let’s talk about your website or project idea. Contact ByteWorks through WhatsApp or our contact form — simple, direct and fast support.';

const phone = import.meta.env.PUBLIC_WHATSAPP_PHONE;
const message =
  import.meta.env.PUBLIC_WHATSAPP_MSG || 'Hi ByteWorks, I’m interested in a website.';
const wa = phone ? `https://wa.me/${phone}?text=${encodeURIComponent(message)}` : null;
---

<Base title={title} description={description} image="/og-image.png" lang="en">
  <section class="px-6 md:px-10 lg:px-16 max-w-3xl mx-auto py-16 md:py-24 text-center space-y-8">
    <h1 class="text-3xl md:text-5xl font-semibold">Let's work together</h1>
    <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
      Ready to build a modern, bilingual website with maintenance included?
      Reach us directly via WhatsApp or send us a message using the form below.
    </p>

    <div class="flex flex-col md:flex-row justify-center items-center gap-4 mt-8">
      {wa && (
        <a
          href={wa}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
        >
          Chat on WhatsApp
        </a>
      )}
    </div>

    <!-- CONTACT FORM -->
    <form
      id="contact-form"
      class="mt-12 text-left space-y-5 max-w-md mx-auto"
      onsubmit="event.preventDefault(); alert('Form submission simulated — backend coming soon.')"
    >
      <div>
        <label for="name" class="block text-sm font-medium mb-1">Name</label>
        <input
          id="name"
          name="name"
          type="text"
          required
          placeholder="Your name"
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          placeholder="you@example.com"
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium mb-1">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          placeholder="Tell us a bit about your project..."
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
      >
        Send Message
      </button>
    </form>

    <div class="border-t border-gray-200 dark:border-gray-800 pt-10 mt-10 text-sm text-gray-600 dark:text-gray-400">
      <p>Prefer a call or meeting? We’ll schedule one after a quick chat.</p>
      <p class="mt-2 text-xs text-gray-500">
        Support hours: Monday–Friday, 9:00 AM – 6:00 PM (AST)
      </p>
    </div>
  </section>
</Base>
