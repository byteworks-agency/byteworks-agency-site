---
const {
  title = "ByteWorks â€” Websites that work for you",
  description = "Professional websites, clear pricing, maintenance included, real support.",
  lang = "en",
  t = {},
  showLangToggle = true
} = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fuentes: Manrope + Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Manrope:wght@600;700&display=swap" rel="stylesheet">
  </head>
  <body class="antialiased bg-white text-neutral-900 dark:bg-neutral-950 dark:text-neutral-100">
    <header class="border-b border-neutral-200/70 dark:border-neutral-800 sticky top-0 backdrop-blur bg-white/75 dark:bg-neutral-950/70 z-50">
      <nav class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href={lang === 'es' ? '/es/' : '/en/'} class="font-semibold tracking-tight font-display">ByteWorks</a>
        <div class="flex items-center gap-4 text-sm">
          <a href={(lang==='es'?'/es/#plans':'/en/#plans')} class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white">{t.nav_plans}</a>
          <a href={(lang==='es'?'/es/contact':'/en/contact')} class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white">{t.nav_contact}</a>
          <a href={(lang==='es'?'/es/terms':'/en/terms')} class="hidden sm:inline text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white">{t.nav_terms}</a>
          <a href={(lang==='es'?'/es/privacy':'/en/privacy')} class="hidden sm:inline text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white">{t.nav_privacy}</a>
          <a href={(lang==='es'?'/es/#cta':'/en/#cta')} class="px-3 py-1.5 rounded-md bg-brand text-black font-medium">{t.nav_cta}</a>
          {showLangToggle && (
            <button id="lang-btn" class="px-2 py-1 border border-neutral-300 dark:border-neutral-700 rounded-md">
              {lang === 'es' ? 'ES' : 'EN'}
            </button>
          )}
        </div>
      </nav>
    </header>

    <main class="min-h-[70vh]">
      <slot />
    </main>

    <footer class="border-t border-neutral-200/70 dark:border-neutral-800 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-10 grid gap-4 sm:grid-cols-3 text-neutral-600 dark:text-neutral-300">
        <div>
          <div class="font-semibold text-neutral-900 dark:text-white font-display">ByteWorks</div>
          <p class="mt-2 text-sm">{t.footer_phrase}</p>
        </div>
        <div>
          <div class="font-semibold text-neutral-900 dark:text-white font-display">{t.footer_links}</div>
          <ul class="mt-2 space-y-1 text-sm">
            <li><a href={(lang==='es'?'/es/#plans':'/en/#plans')} class="hover:text-neutral-900 dark:hover:text-white">{t.nav_plans}</a></li>
            <li><a href={(lang==='es'?'/es/contact':'/en/contact')} class="hover:text-neutral-900 dark:hover:text-white">{t.nav_contact}</a></li>
            <li><a href={(lang==='es'?'/es/terms':'/en/terms')} class="hover:text-neutral-900 dark:hover:text-white">{t.nav_terms}</a></li>
            <li><a href={(lang==='es'?'/es/privacy':'/en/privacy')} class="hover:text-neutral-900 dark:hover:text-white">{t.nav_privacy}</a></li>
          </ul>
        </div>
        <div id="cta" class="sm:text-right">
          <div class="font-semibold text-neutral-900 dark:text-white font-display">{t.cta_title}</div>
          <a href={(lang==='es'?'/es/contact':'/en/contact')} class="inline-block mt-2 px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60">{t.cta_button}</a>
          <p class="mt-2 text-xs">{t.pricing_note}</p>
        </div>
      </div>
    </footer>

    <script is:inline>
      // Alternar idioma manual + persistencia
      const btn = document.getElementById('lang-btn');
      if (btn) {
        btn.addEventListener('click', () => {
          const current = document.documentElement.lang || 'en';
          const next = current === 'es' ? 'en' : 'es';
          localStorage.setItem('bw_lang', next);
          const path = window.location.pathname.replace(/^\/(en|es)\//,'');
          window.location.href = `/${next}/${path || ''}`;
        });
      }
    </script>
  </body>
</html>