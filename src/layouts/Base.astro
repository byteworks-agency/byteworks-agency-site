---
import Header from '../components/SiteHeader.astro';
import Footer from '../components/Footer.astro';
import { DEFAULT_WA } from '../config/whatsapp';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
// Use Node's process.env in frontmatter to avoid esbuild issues with import.meta.env
const ENV = process.env as Record<string, string | undefined>;

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'es';
  robots?: string;
}

const {
  title = 'ByteWorks — Modern web design & hosting',
  description = 'Websites that work for you — not against you.\nBilingual, fast, and affordable.',
  image = '/og-image.png',
  lang = 'en',
  robots = 'index,follow',
} = Astro.props as Props;

const url = new URL(Astro.url.pathname, Astro.site);
let siteOrigin = '';
try { siteOrigin = new URL('/', Astro.site).origin; } catch { siteOrigin = url.origin; }
const pathname = url.pathname;
const ogImage = image && image.startsWith('http') ? image : siteOrigin + image;

function altHref(targetLang: 'en' | 'es') {
  const parts = pathname.split('/').filter(Boolean);
  if (parts.length === 0) return `/${targetLang}/`;
  if (parts[0] === 'en' || parts[0] === 'es') {
    parts[0] = targetLang;
  } else {
    parts.unshift(targetLang);
  }
  return `/${parts.join('/')}/`;
}

const PLAUSIBLE = ENV.PUBLIC_PLAUSIBLE_DOMAIN || '';
const CF_TOKEN = ENV.PUBLIC_CLOUDFLARE_ANALYTICS_TOKEN || '';

// expone el número al DOM como data attribute (usa env o fallback temporal)
const WA_FROM_ENV = (ENV.PUBLIC_WHATSAPP_PHONE || DEFAULT_WA || '').toString();
// Social profiles (optional) to enrich JSON-LD
const socials = [
  ENV.PUBLIC_SOCIAL_TWITTER,
  ENV.PUBLIC_SOCIAL_LINKEDIN,
  ENV.PUBLIC_SOCIAL_INSTAGRAM,
  ENV.PUBLIC_SOCIAL_FACEBOOK,
  ENV.PUBLIC_SOCIAL_YOUTUBE,
  ENV.PUBLIC_SOCIAL_GITHUB,
].filter((x) => typeof x === 'string' && x);
const orgJson = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'ByteWorks',
  url: siteOrigin,
  logo: siteOrigin + '/logo.png',
  ...(socials.length ? { sameAs: socials } : {}),
};
const siteJson = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'ByteWorks',
  url: siteOrigin,
  inLanguage: lang,
};
const robotsMeta = robots ?? ((process.env.NODE_ENV === 'production') ? 'index,follow' : 'noindex,nofollow');
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={url.href} />
    <meta property="og:site_name" content="ByteWorks" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="robots" content={robotsMeta} />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#00BCD4" />
    <meta name="color-scheme" content="light dark" />
    <link rel="canonical" href={url.href} />

    <link rel="alternate" hreflang="en" href={altHref('en')} />
    <link rel="alternate" hreflang="es" href={altHref('es')} />
    <link rel="alternate" hreflang="x-default" href={altHref('en')} />



    <script is:inline type="application/ld+json">{JSON.stringify(orgJson)}</script>
    <script is:inline type="application/ld+json">{JSON.stringify(siteJson)}</script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@600;700;800&display=swap"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    {PLAUSIBLE && (
      <script defer data-domain={PLAUSIBLE} src="https://plausible.io/js/script.js"></script>
    )}
    {CF_TOKEN && (
      <script
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={`{"token": "${CF_TOKEN}"}`}
      ></script>
    )}

    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <style is:global>
      html, body { max-width: 100%; overflow-x: hidden; }
      img, video { max-width: 100%; height: auto; }
      iframe { max-width: 100%; }
      body { font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji"; }
      h1, h2, h3, .font-display { font-family: Manrope, Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; }
      .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
    </style>

    <ClientRouter />
    <script is:inline>
      (function(){
        try {
          var h = location.hash || '';
          if (h && h.indexOf('access_token=') !== -1 && !location.pathname.startsWith('/auth/callback')) {
            location.replace('/auth/callback' + h);
          }
        } catch {}
      })();
    </script>
  </head>

  <body
    class="min-h-screen flex flex-col font-body bg-background-light text-gray-900 dark:bg-background-dark dark:text-text-secondary"
    data-wa={WA_FROM_ENV}
  >
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-[1000] bg-black text-white dark:bg-white dark:text-black px-3 py-2 rounded">Skip to content</a>
    <Header lang={lang} />
    <main id="main" data-astro-transition-scope="page" class="flex-1 px-4 lg:px-40 pt-20 md:pt-24 pb-10 flex justify-center">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
