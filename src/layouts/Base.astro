---
/**
 * Base layout para páginas.
 * Uso:
 * ---
 * const title = 'ByteWorks — Websites that work for you';
 * const description = 'Professional, bilingual Astro sites with transparent pricing.';
 * const image = '/og-image.png'; // o .svg en /public
 * const lang = Astro.currentLocale ?? 'en'; // si no usas i18n de Astro, pásalo por props
 * ---
 * <Base title={title} description={description} image={image} lang={lang}>
 *   <!-- contenido -->
 * </Base>
 */

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'es';
}

const {
  title = 'ByteWorks — Modern web design & hosting',
  description = 'Websites that work for you — not against you. Bilingual, fast, and affordable.',
  image = '/og-image.png',
  lang = 'en',
} = Astro.props;

// Deriva URLs canónicas y alternates simples EN/ES basadas en la ruta actual.
const url = new URL(Astro.url.pathname, Astro.site);
const pathname = url.pathname;

// Normaliza rutas para alternates (asumiendo estructura /en/... y /es/...)
function altHref(targetLang: 'en' | 'es') {
  const parts = pathname.split('/').filter(Boolean);
  if (parts.length === 0) return `/${targetLang}/`;
  // Si el primer segmento es en|es, lo reemplazamos; si no, lo anteponemos.
  if (parts[0] === 'en' || parts[0] === 'es') {
    parts[0] = targetLang;
  } else {
    parts.unshift(targetLang);
  }
  return `/${parts.join('/')}/`;
}

// Analytics condicional
const PLAUSIBLE = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN;
const CF_TOKEN = import.meta.env.PUBLIC_CLOUDFLARE_ANALYTICS_TOKEN;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={url.toString()} />

    <!-- Hreflang alternates (EN/ES) -->
    <link rel="alternate" href={new URL(altHref('en'), Astro.site).toString()} hreflang="en" />
    <link rel="alternate" href={new URL(altHref('es'), Astro.site).toString()} hreflang="es" />
    <link rel="alternate" href={url.toString()} hreflang="x-default" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="ByteWorks" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url.toString()} />
    <meta property="og:image" content={new URL(image, Astro.site).toString()} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site).toString()} />

    <!-- Favicons (ajusta según tus assets en /public) -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Theme-color claro/oscuro -->
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b0b0b" />

    <!-- Tailwind base (si usas uno) -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <style is:global>
      /* Si ya tienes styles globales, ignora esto o usa /src/styles/global.css */
      html { scroll-behavior: smooth; }
    </style>

    <!-- Analytics opcional -->
    {PLAUSIBLE && (
      <script defer data-domain={PLAUSIBLE} src="https://plausible.io/js/script.js"></script>
    )}
    {CF_TOKEN && (
      <script
        defer
        src={`https://static.cloudflareinsights.com/beacon.min.js`}
        data-cf-beacon={`{"token": "${CF_TOKEN}"}`}
      ></script>
    )}
  </head>
  <body class="min-h-dvh antialiased">
    <slot />
  </body>
</html>
