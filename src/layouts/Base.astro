---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { DEFAULT_WA } from '../config/whatsapp';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'es';
}

const {
  title = 'ByteWorks — Modern web design & hosting',
  description = 'Websites that work for you — not against you.\nBilingual, fast, and affordable.',
  image = '/og-image.svg',
  lang = 'en',
} = Astro.props;

const url = new URL(Astro.url.pathname, Astro.site);
const pathname = url.pathname;

function altHref(targetLang: 'en' | 'es') {
  const parts = pathname.split('/').filter(Boolean);
  if (parts.length === 0) return `/${targetLang}/`;
  if (parts[0] === 'en' || parts[0] === 'es') {
    parts[0] = targetLang;
  } else {
    parts.unshift(targetLang);
  }
  return `/${parts.join('/')}/`;
}

const PLAUSIBLE = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN;
const CF_TOKEN = import.meta.env.PUBLIC_CLOUDFLARE_ANALYTICS_TOKEN;

// expone el número al DOM como data attribute (usa env o fallback temporal)
const WA_FROM_ENV = (import.meta.env.PUBLIC_WHATSAPP_PHONE || DEFAULT_WA || '').toString();
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <!-- Hace el sitio realmente responsive en móviles -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />

    <link rel="alternate" hreflang="en" href={altHref('en')} />
    <link rel="alternate" hreflang="es" href={altHref('es')} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    {PLAUSIBLE && (
      <script defer data-domain={PLAUSIBLE} src="https://plausible.io/js/script.js"></script>
    )}
    {CF_TOKEN && (
      <script
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={`{"token": "${CF_TOKEN}"}`}
      ></script>
    )}

    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Ajustes globales muy seguros para mobile -->
    <style is:global>
      /* Evita scroll horizontal accidental en móviles */
      html, body { max-width: 100%; overflow-x: hidden; }

      /* Imágenes y videos nunca deben desbordar el contenedor */
      img, video { max-width: 100%; height: auto; }

      /* Asegura que iframes se escalen correctamente (si los usas) */
      iframe { max-width: 100%; }

      /* Tipografías declaradas (Inter / Manrope) ya cargan desde Google Fonts */
      body { font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji"; }
      h1, h2, h3, .font-display { font-family: Manrope, Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; }
    </style>
  </head>

  <body
    class="min-h-screen flex flex-col font-sans text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-950"
    data-wa={WA_FROM_ENV}
  >
    <Header lang={lang} />
    <!-- Contenedor con padding horizontal responsivo -->
    <main class="flex-1 container mx-auto px-4 sm:px-6 lg:px-8 pt-20 md:pt-24 pb-10">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>

