---
const { lang = 'es', id = 'addons' } = Astro.props;
const isEN = lang === 'en';

const items = [
  {
    key: 'seo',
    titleEN: 'Advanced SEO & Local Positioning',
    titleES: 'Advanced SEO & Local Positioning',
    priceEN: '+$30/month',
    priceES: '+$30/mes',
    bulletsEN: [
      'Technical and speed optimization (Core Web Vitals readiness).',
      'Schema basics and metadata hygiene.',
      'Google Business profile setup/maintenance.',
      'One monthly SEO improvement action.',
    ],
    bulletsES: [
      'Optimización técnica y de velocidad (preparación Core Web Vitals).',
      'Schema básico y saneamiento de metadatos.',
      'Alta/mantenimiento de perfil en Google Business.',
      'Una acción mensual de mejora SEO.',
    ],
    footEN: 'Sustainable SEO maintenance focused on technical foundations.',
    footES: 'Mantenimiento SEO sostenible, enfocado en la base técnica.',
  },
  {
    key: 'blog',
    titleEN: 'Blog / News Section',
    titleES: 'Blog / News Section',
    priceEN: '+$25/month',
    priceES: '+$25/mes',
    bulletsEN: [
      'Blog section with article template.',
      'Categories, tags, and editable blocks.',
      'SEO-ready structure.',
      'Publishing assisted by ByteWorks or simple self-management.',
    ],
    bulletsES: [
      'Sección de blog con plantilla para artículos.',
      'Categorías, etiquetas y bloques editables.',
      'Estructura lista para SEO.',
      'Publicación asistida por ByteWorks o autogestión simple.',
    ],
    footEN: 'Keep your site active and attract organic traffic.',
    footES: 'Mantén tu sitio activo y atrae tráfico orgánico.',
  },
  {
    key: 'mini-store',
    titleEN: 'Small Online Store (up to 10 products)',
    titleES: 'Small Online Store (hasta 10 productos)',
    priceEN: '+$35/month',
    priceES: '+$35/mes',
    bulletsEN: [
      'Mini-store integrated into the site.',
      'Cart and manual checkout flow.',
      'Order logging to Google Sheets.',
      'Basic analytics via Google.',
    ],
    bulletsES: [
      'Mini-tienda integrada dentro del sitio.',
      'Carrito y flujo de checkout manual.',
      'Registro de pedidos en Google Sheets.',
      'Analíticas básicas con Google.',
    ],
    footEN: 'Perfect for small catalogs or pilot launches.',
    footES: 'Perfecto para catálogos pequeños o lanzamientos piloto.',
  },
  {
    key: 'branding',
    titleEN: 'Basic Branding Package (one-time)',
    titleES: 'Basic Branding Package (único pago)',
    priceEN: '$120 (one-time)',
    priceES: '$120 (único pago)',
    bulletsEN: [
      'Logo (primary and alternate).',
      'Color palette and recommended typography.',
      'Social avatars and banner kit.',
      'Basic brand usage guide (PDF).',
    ],
    bulletsES: [
      'Logo (principal y alternativo).',
      'Paleta de colores y tipografía recomendada.',
      'Kit de avatares y banners para redes.',
      'Guía básica de uso de marca (PDF).',
    ],
    footEN: 'A clear, professional identity consistent with your brand.',
    footES: 'Identidad clara, profesional y coherente con tu marca.',
  },
  {
    key: 'extended-catalog',
    titleEN: 'Extended Catalog (extra product blocks)',
    titleES: 'Catálogo extendido (bloques adicionales de productos)',
    priceEN: '+$25/month per extra block of 20 products',
    priceES: '+$25/mes por cada bloque adicional de 20 productos',
    bulletsEN: [
      'Scale your catalog to 40, 60, or more products.',
      'Performance optimization and lazy loading for larger lists.',
      'Category-ready product organization.',
      'Full management via Google Sheets.',
    ],
    bulletsES: [
      'Escala tu catálogo a 40, 60 o más productos.',
      'Optimización de rendimiento y carga diferida en listados grandes.',
      'Organización por categorías lista para usar.',
      'Gestión completa desde Google Sheets.',
    ],
    footEN: 'Over 60 products may require a custom “E-Commerce Plus” plan.',
    footES: 'Más de 60 productos puede requerir un plan personalizado “E-Commerce Plus”.',
  },
];
---

<section id={id} class="mt-20">
  <header class="text-center mb-8 space-y-2">
    <h2 class="text-2xl md:text-3xl font-semibold">
      {isEN ? 'ADD-ONS (Optional)' : 'ADD-ONS (Opcionales)'}
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
      {isEN
        ? 'Activate only what you need, when your business requires it.'
        : 'Activa solo lo que necesites, cuando tu negocio lo requiera.'}
      <br />
      {isEN
        ? 'All add-ons integrate without affecting your design or base plan.'
        : 'Todos los add-ons se integran sin afectar tu diseño ni tu plan base.'}
    </p>
  </header>

  <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
    {items.map((it) => (
      <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-5 flex flex-col">
        <div class="flex items-start justify-between gap-4">
          <h3 class="text-lg font-semibold">
            {isEN ? it.titleEN : it.titleES}
          </h3>
          <span class="text-sm font-medium bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">
            {isEN ? it.priceEN : it.priceES}
          </span>
        </div>

        <div class="mt-3">
          <p class="font-medium">{isEN ? 'Includes:' : 'Incluye:'}</p>
          <ul class="list-disc list-inside text-sm text-gray-700 dark:text-gray-200 mt-1 space-y-1">
            {(isEN ? it.bulletsEN : it.bulletsES).map((b) => <li>{b}</li>)}
          </ul>
        </div>

        <p class="mt-3 text-sm text-gray-600 dark:text-gray-300">
          {isEN ? it.footEN : it.footES}
        </p>
      </article>
    ))}
  </div>
</section>
