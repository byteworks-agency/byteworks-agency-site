---
const { lang = 'es', id = 'addons', summaryOnly = false } = Astro.props as { lang?: 'en' | 'es'; id?: string; summaryOnly?: boolean };
const isEN = lang === 'en';

const items = [
  {
    key: 'seo',
    titleEN: 'Advanced SEO & Local Positioning',
    titleES: 'SEO avanzado y posicionamiento local',
    priceEN: '+$30/month',
    priceES: '+$30/mes',
    descriptionEN: 'Strengthen your visibility and technical foundations.',
    descriptionES: 'Refuerza tu visibilidad y la base técnica.',
    bulletsEN: [
      'Technical + speed optimization (Core Web Vitals ready)',
      'Schema basics & metadata hygiene',
      'Local business profile setup/maintenance',
      'One monthly SEO improvement task',
    ],
    bulletsES: [
      'Optimización técnica y de velocidad (listas para Core Web Vitals)',
      'Schema básico y saneamiento de metadatos',
      'Alta y mantenimiento de perfil de negocio/local',
      'Una tarea mensual de mejora SEO',
    ],
    footEN: 'Sustainable, performance-focused SEO maintenance.',
    footES: 'Mantenimiento SEO sostenible enfocado en rendimiento.',
  },
  {
    key: 'blog',
    titleEN: 'Blog / News Section',
    titleES: 'Blog / Noticias',
    priceEN: '+$25/month',
    priceES: '+$25/mes',
    descriptionEN: 'Perfect for organic traffic and brand authority.',
    descriptionES: 'Perfecto para tráfico orgánico y autoridad de marca.',
    bulletsEN: [
      'Blog section with article template',
      'Categories, tags & editable blocks',
      'SEO-ready routes',
      'Publishing assisted by ByteWorks or simple self-management',
    ],
    bulletsES: [
      'Sección de blog con plantilla de artículos',
      'Categorías, etiquetas y bloques editables',
      'Rutas listas para SEO',
      'Publicación asistida por ByteWorks o autogestión simple',
    ],
    footEN: '',
    footES: '',
  },
  {
    key: 'mini-store',
    titleEN: 'Small Online Store (up to 10 products)',
    titleES: 'Mini tienda online (hasta 10 productos)',
    priceEN: '+$20/month',
    priceES: '+$20/mes',
    descriptionEN: 'A lightweight e-commerce solution built into your site.',
    descriptionES: 'Una solución e-commerce ligera integrada en tu sitio.',
    bulletsEN: [
      'Mini-store with cart + manual checkout',
      'Order logging in internal dashboard',
      'Basic analytics inside dashboard',
      'Simple billing system',
      'Product updates assisted by ByteWorks or easy self-management',
    ],
    bulletsES: [
      'Mini-tienda con carrito y checkout manual',
      'Registro de pedidos en el dashboard interno',
      'Analíticas básicas dentro del dashboard',
      'Sistema de facturación simple',
      'Actualización de productos asistida por ByteWorks o autogestión simple',
    ],
    footEN: 'Ideal for small catalogs or pilot launches.',
    footES: 'Ideal para catálogos pequeños o lanzamientos piloto.',
  },
  {
    key: 'extended-catalog',
    titleEN: 'Extended Catalog (extra product blocks)',
    titleES: 'Catálogo extendido (bloques adicionales de productos)',
    priceEN: '+$25/month per extra block of 20 products',
    priceES: '+$25/mes por bloque adicional de 20 productos',
    descriptionEN: 'Scale your catalog without performance issues.',
    descriptionES: 'Escala tu catálogo sin afectar el rendimiento.',
    bulletsEN: [
      'Expand to 40, 60, or more products',
      'Optimized performance & lazy loading',
      'Category-ready product organization',
      'Full dashboard management',
    ],
    bulletsES: [
      'Expande a 40, 60 o más productos',
      'Optimización y carga diferida para listados grandes',
      'Organización por categorías lista para usar',
      'Gestión completa desde el dashboard interno',
    ],
    footEN: 'Over 60 products may require a custom E-Commerce Plus plan.',
    footES: 'Más de 60 productos puede requerir un plan E-Commerce Plus a medida.',
  },
  {
    key: 'branding',
    titleEN: 'Basic Branding Package (one-time)',
    titleES: 'Paquete básico de branding (único pago)',
    priceEN: '$120 (one-time)',
    priceES: '$120 (único pago)',
    descriptionEN: 'Give your business a strong visual identity.',
    descriptionES: 'Dale a tu negocio una identidad visual sólida.',
    bulletsEN: [
      'Primary + alternate logo',
      'Color palette & recommended typography',
      'Social media avatars + banner kit',
      'Basic brand usage guide (PDF)',
    ],
    bulletsES: [
      'Logo principal y alternativo',
      'Paleta de colores y tipografía recomendada',
      'Avatares y banners para redes sociales',
      'Guía básica de uso de marca (PDF)',
    ],
    footEN: 'A clean, professional identity aligned to your brand.',
    footES: 'Identidad limpia, profesional y alineada a tu marca.',
  },
];
---

<section id={id} class="mt-20">
  <header class="text-center mb-8 space-y-2">
    <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-text-primary font-heading">
      {isEN ? 'Optional Add-Ons' : 'Add-ons opcionales'}
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
      {isEN
        ? 'Activate only what you need — every add-on integrates smoothly without affecting your design or core plan.'
        : 'Activa solo lo que necesites — cada add-on se integra sin afectar tu diseño ni tu plan base.'}
    </p>
  </header>

  <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
    {items.map((it) => {
      const title = isEN ? it.titleEN : it.titleES;
      const price = isEN ? it.priceEN : it.priceES;
      const description = isEN ? it.descriptionEN : it.descriptionES;
      const bullets = isEN ? it.bulletsEN : it.bulletsES;
      const foot = isEN ? it.footEN : it.footES;

      return (
        <article class="border border-gray-200 dark:border-gray-700 rounded-xl p-6 flex flex-col bg-white dark:bg-background-dark/50">
          <h3 class="text-lg font-bold leading-snug text-gray-900 dark:text-text-primary font-heading">
            {title}
          </h3>
          <div class="mt-1">
            <span class="inline-block text-[11px] md:text-xs font-medium bg-primary/10 text-primary px-2 py-0.5 rounded">
              {price}
            </span>
          </div>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{description}</p>

          {!summaryOnly && (
            <>
              <div class="mt-3">
                <p class="font-medium text-sm md:text-base">{isEN ? 'Includes:' : 'Incluye:'}</p>
                <ul class="list-disc list-inside text-sm text-gray-600 dark:text-gray-300 mt-1 space-y-1">
                  {bullets.map((b) => <li>{b}</li>)}
                </ul>
              </div>
              {foot && (
                <p class="mt-3 text-sm text-gray-500 dark:text-gray-400">
                  {foot}
                </p>
              )}
            </>
          )}
        </article>
      );
    })}
  </div>
</section>
