---
interface AddOn {
  id: string;
  title: string;
  price: string;        // monthly or one-time label
  bullets: string[];
  icon?: string;
  ctaHref: string;
  ctaText: string;
  badge?: string;       // optional small badge, e.g. "One-time"
}

interface Props {
  lang?: 'en' | 'es';
  items: AddOn[];
  anchorId?: string;
}

const { items = [], lang = 'en', anchorId = 'addons' } = Astro.props;
---

<section id={anchorId} class="section">
  <div class="container">
    <header class="text-center max-w-2xl mx-auto mb-10 sm:mb-12">
      <h2 class="font-display text-2xl sm:text-3xl lg:text-4xl font-extrabold tracking-tight">
        {lang === 'es' ? 'Add-ons para potenciar tu sitio' : 'Add-ons to power up your site'}
      </h2>
      <p class="mt-3 text-sm sm:text-base text-neutral-600 dark:text-neutral-300">
        {lang === 'es'
          ? 'Activa solo lo que necesites — sin complicar tu diseño ni tu plan base.'
          : 'Enable only what you need — without impacting your base plan or design.'}
      </p>
    </header>

    <div class="grid gap-5 sm:gap-6 md:grid-cols-2 lg:grid-cols-4">
      {items.map((a) => (
        <article class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-950 p-5 sm:p-6 flex flex-col">
          <div class="flex items-center gap-3">
            {a.icon && <img src={a.icon} alt="" class="w-6 h-6 dark:invert" />}
            <h3 class="font-display text-lg sm:text-xl font-semibold">{a.title}</h3>
          </div>

          <div class="mt-3 flex items-center gap-2">
            <span class="text-base sm:text-lg font-bold">{a.price}</span>
            {a.badge && (
              <span class="text-xs px-2 py-0.5 rounded bg-neutral-200 dark:bg-neutral-800">
                {a.badge}
              </span>
            )}
          </div>

          <ul class="mt-4 space-y-2 text-sm text-neutral-700 dark:text-neutral-300 flex-1">
            {a.bullets.map((b) => (
              <li class="pl-5 relative">
                <span class="absolute left-0 top-1.5 size-2 rounded-full bg-brand"></span>
                {b}
              </li>
            ))}
          </ul>

          <a
            href={a.ctaHref}
            class="mt-5 inline-flex justify-center items-center gap-2 px-4 py-2 rounded-md border border-neutral-300 dark:border-neutral-700 hover:border-brand/60"
          >
            {a.ctaText}
          </a>
        </article>
      ))}
    </div>
  </div>
</section>