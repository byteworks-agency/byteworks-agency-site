---
interface Props {
  lang?: 'en' | 'es';
  id?: string;
}
const { lang = 'es', id = 'addons' } = Astro.props;
const isEN = lang === 'en';

const items = [
  {
    titleEN: 'Advanced SEO & Local Positioning',
    titleES: 'Advanced SEO & Local Positioning',
    priceEN: '+$30/month',
    priceES: '+$30/mes',
    bulletsEN: [
      'Keyword research.',
      'Technical and speed optimization.',
      'Google Business profile setup.',
      'Monthly report with metrics and insights.',
    ],
    bulletsES: [
      'Investigación de palabras clave.',
      'Optimización técnica y de velocidad.',
      'Configuración de perfil en Google Business.',
      'Reporte mensual con métricas e insights.',
    ],
    footEN: 'Improve your rankings and local visibility.',
    footES: 'Mejora tu posicionamiento y visibilidad local.',
  },
  {
    titleEN: 'Blog / News Section',
    titleES: 'Blog / News Section',
    priceEN: '+$25/month',
    priceES: '+$25/mes',
    bulletsEN: [
      'Blog section with article template.',
      'Categories, tags, and editable blocks.',
      'SEO-ready structure.',
      'Posts managed by ByteWorks or self-managed option.',
    ],
    bulletsES: [
      'Sección de blog con plantilla para artículos.',
      'Categorías, etiquetas y bloques editables.',
      'Estructura lista para SEO.',
      'Publicaciones manejadas por ByteWorks o autogestión disponible.',
    ],
    footEN: 'Keep your site active and attract organic traffic.',
    footES: 'Mantén tu sitio activo y atrae tráfico orgánico.',
  },
  {
    titleEN: 'Small Online Store (up to 20 products)',
    titleES: 'Small Online Store (hasta 20 productos)',
    priceEN: '+$35/month',
    priceES: '+$35/mes',
    bulletsEN: [
      'Mini-store integrated into the site.',
      'Cart and manual checkout system.',
      'Basic analytics with Google.',
      'Product management by ByteWorks (self-management available).',
    ],
    bulletsES: [
      'Mini-tienda integrada dentro del sitio.',
      'Carrito y sistema de checkout manual.',
      'Analíticas básicas con Google.',
      'Gestión de productos por ByteWorks (autogestión disponible).',
    ],
    footEN: 'Perfect for small businesses or limited catalogs.',
    footES: 'Perfecto para negocios pequeños o catálogos limitados.',
  },
  {
    titleEN: 'Basic Branding Package (one-time)',
    titleES: 'Basic Branding Package (único pago)',
    priceEN: '$120 (one-time)',
    priceES: '$120 (único pago)',
    bulletsEN: [
      'Logo (primary and alternate).',
      'Color palette and recommended typography.',
      'Social avatars and banners kit.',
      'Basic brand guidelines.',
    ],
    bulletsES: [
      'Logo (principal y alternativo).',
      'Paleta de colores y tipografía recomendada.',
      'Kit de avatares y banners para redes sociales.',
      'Manual básico de identidad visual.',
    ],
    footEN: 'A clear, professional identity consistent with your brand.',
    footES: 'Una identidad clara, profesional y coherente con tu marca.',
  },
];
---

<section id={id} class="mt-20">
  <header class="text-center mb-8 space-y-2">
    <h2 class="text-2xl md:text-3xl font-semibold">
      {isEN ? 'ADD-ONS (Optional)' : 'ADD-ONS (Opcionales)'}
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
      {isEN
        ? 'Activate only what you need, when your business requires it.'
        : 'Activa solo lo que necesites, cuando tu negocio lo requiera.'}
      <br />
      {isEN
        ? 'All add-ons integrate without affecting your design or base plan.'
        : 'Todos los add-ons se integran sin afectar tu diseño ni tu plan base.'}
    </p>
  </header>

  <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
    {items.map((it) => (
      <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-5 flex flex-col">
        <div class="flex items-start justify-between gap-4">
          <h3 class="text-lg font-semibold">
            {isEN ? it.titleEN : it.titleES}
          </h3>
          <span class="text-sm font-medium bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">
            {isEN ? it.priceEN : it.priceES}
          </span>
        </div>

        <div class="mt-3">
          <p class="font-medium">{isEN ? 'Includes:' : 'Incluye:'}</p>
          <ul class="list-disc list-inside text-sm text-gray-700 dark:text-gray-200 mt-1 space-y-1">
            {(isEN ? it.bulletsEN : it.bulletsES).map((b) => <li>{b}</li>)}
          </ul>
        </div>

        <p class="mt-3 text-sm text-gray-600 dark:text-gray-300">
          {isEN ? it.footEN : it.footES}
        </p>
      </article>
    ))}
  </div>
</section>
