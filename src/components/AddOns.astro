---
interface Props {
  lang?: 'en' | 'es';
  title?: string;
  description?: string;
}
const { lang = 'en', title, description } = Astro.props;

const t = lang === 'es'
  ? {
      h: title ?? 'Add-ons opcionales',
      p: description ?? 'Activa lo que necesites, cuando tu negocio lo requiera. Se integran sin afectar tu diseño.',
      items: [
        { name: 'Advanced SEO & Posicionamiento Local', price: '+$30/mes', icon: '/icons/seo.svg',
          list: ['Keyword research', 'Optimización técnica y velocidad', 'Google Business Profile', 'Reporte mensual'] },
        { name: 'Sección de Blog / Noticias', price: '+$25/mes', icon: '/icons/blog.svg',
          list: ['Plantilla para artículos', 'Categorías y etiquetas', 'Estructura lista para SEO', 'Publicación por ByteWorks o autogestión'] },
        { name: 'Mini-tienda (hasta 20 productos)', price: '+$35/mes', icon: '/icons/store.svg',
          list: ['Carrito y checkout manual', 'Analíticas básicas', 'Gestión por ByteWorks (autogestión opcional)'] },
        { name: 'Branding básico (pago único)', price: '$120 único', icon: '/icons/branding.svg',
          list: ['Logo principal y alternativo', 'Paleta y tipografías', 'Avatares y banners', 'Mini manual de identidad'] },
      ]
    }
  : {
      h: title ?? 'Optional add-ons',
      p: description ?? 'Enable only what you need, when you need it — integrates cleanly with your base plan.',
      items: [
        { name: 'Advanced SEO & Local', price: '+$30/month', icon: '/icons/seo.svg',
          list: ['Keyword research', 'Technical & speed optimization', 'Google Business Profile', 'Monthly report'] },
        { name: 'Blog / News Section', price: '+$25/month', icon: '/icons/blog.svg',
          list: ['Article template', 'Categories & tags', 'SEO-ready structure', 'Published by ByteWorks or self-managed'] },
        { name: 'Small Online Store (up to 20 items)', price: '+$35/month', icon: '/icons/store.svg',
          list: ['Cart & manual checkout', 'Basic analytics', 'Managed by ByteWorks (self-manage optional)'] },
        { name: 'Basic Branding (one-time)', price: '$120 one-time', icon: '/icons/branding.svg',
          list: ['Primary + alt logo', 'Colors & type', 'Social avatars & banners', 'Basic identity guide'] },
      ]
    };
---

<section class="section">
  <div class="container">
    <header class="text-center max-w-2xl mx-auto mb-10">
      <h2 class="font-display text-3xl sm:text-4xl font-extrabold">{t.h}</h2>
      <p class="mt-3 text-neutral-600 dark:text-neutral-300">{t.p}</p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {t.items.map((it) => (
        <article class="rounded-2xl border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-950 p-6 flex flex-col">
          <div class="flex items-center gap-3">
            <img src={it.icon} alt="" width="28" height="28" class="opacity-90 dark:opacity-100" />
            <h3 class="font-display font-semibold">{it.name}</h3>
          </div>
          <div class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">{it.price}</div>
          <ul class="mt-4 space-y-2 text-sm text-neutral-700 dark:text-neutral-300">
            {it.list.map((li) => (
              <li class="flex items-start gap-2">
                <img src="/icons/check.svg" alt="" width="18" height="18" class="mt-0.5 opacity-90 dark:opacity-100" />
                <span>{li}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
