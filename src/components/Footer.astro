---
interface Props { lang?: 'en' | 'es'; }
const { lang = 'en' } = Astro.props;

const phone = import.meta.env.PUBLIC_WHATSAPP_PHONE; // ej. 18687759858
const wa = phone ? `https://wa.me/${phone}` : null;
const year = new Date().getFullYear();

const isEN = lang === 'en';
const base = isEN ? '/en' : '/es';
const home = `${base}/`;
const plans = isEN ? `${base}/plans` : `${base}/planes`;
const contact = isEN ? `${base}/contact` : `${base}/contacto`;
const terms = isEN ? `${base}/terms` : `${base}/terminos`;
const privacy = isEN ? `${base}/privacy` : `${base}/privacidad`;
---
<footer class="border-t py-10 text-sm">
  <div class="container mx-auto px-4 grid gap-6 md:grid-cols-3">
    <div>
      <div class="font-display text-lg">ByteWorks</div>
      <p class="text-gray-600 mt-2">
        {isEN ? 'Websites that work for you — not against you.' : 'Websites que trabajan a tu favor — no en tu contra.'}
      </p>
    </div>

    <nav class="flex flex-col gap-2">
      <a href={home}>{isEN ? 'Home' : 'Inicio'}</a>
      <a href={plans}>{isEN ? 'Plans' : 'Planes'}</a>
      <a href={contact}>{isEN ? 'Contact' : 'Contacto'}</a>
      <a href={terms}>{isEN ? 'Terms' : 'Términos'}</a>
      <a href={privacy}>{isEN ? 'Privacy' : 'Privacidad'}</a>
    </nav>

    <div class="flex flex-col gap-2">
      {wa && (<a class="underline" href={wa} target="_blank" rel="noopener">WhatsApp</a>)}
      <!-- Email eliminado a petición -->
      <div>© {year} ByteWorks. {isEN ? 'All rights reserved.' : 'Todos los derechos reservados.'}</div>
    </div>
  </div>
</footer>
